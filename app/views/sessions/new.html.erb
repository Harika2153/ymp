<h1>SIGNIN</h1>
<%= form_with url: signin_path do |form| %>
<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "name@gmail.com" %>
</div>
<div class="mb-3">
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="mb-3">
    <%= form.submit "SIGNIN", class: "btn bt-primary" %>
</div>
<% end %>